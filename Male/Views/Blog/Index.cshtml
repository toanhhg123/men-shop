   @model IEnumerable<Blog>;
   <section class="breadcrumb-blog set-bg" data-setbg="/client/img/breadcrumb-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Our Blog</h2>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Blog Section Begin -->
    <section class="blog spad">
        <div class="container">
            <div class="row">
                @if(Model != null){
                    foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic set-bg" data-setbg="/uploads/@item.Img"></div>
                                <div class="blog__item__text">
                                    <span><img src="/client/img/icon/calendar.png" alt=""> 16 February 2020</span>
                                    <h5>What Curling Irons Are The Best Ones</h5>
                                    <a asp-action='Detail' asp-route-id="@item.id">Read More</a>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </section>