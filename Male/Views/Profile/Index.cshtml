@model UserProfile

<link rel="stylesheet" href="~/Admin/vendors/mdi/css/materialdesignicons.min.css">
<link rel="stylesheet" href="~/Admin/vendors/css/vendor.bundle.base.css">
<link rel="stylesheet" href="~/Admin/css/style.css">
<link rel="shortcut icon" href="~/Admin/images/favicon.png" />
<link rel="stylesheet" href="~/css/profile.css" type="text/css">

@{
    var errorMessage = ViewBag.errorMessage as string;
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Account</h4>
            @if(errorMessage != null){
                 <div class="alert alert-danger" role="alert">
                   @errorMessage
                </div>
            }
            <form class="forms-sample" asp-action='update' method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for='@Model.userName'></label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Name"
                           asp-for='@Model.userName' />
                    <span asp-validation-for='@Model.userName' class="bg-danger text-white my-1 d-block"></span>
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <input type="file"
                           name="img"
                           class="file-upload-default" />
                    <div class="input-group col-xs-12">
                        <input type="text"
                               class="form-control file-upload-info"
                               disabled=""
                               placeholder="Upload Image" />
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary"
                                    type="button">
                                Upload
                            </button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label >address</label>
                    <select name="province" class="form-control mb-2 province d-block">
                       <option value="">---chọn thành phố</option>
                    </select>
                    <select name="districts" class="form-control districts d-block" >
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for='@Model.phoneNumber'></label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputCity1"
                           placeholder="phone number"
                           asp-for='@Model.phoneNumber' />
                </div>
                <button type="submit" class="btn btn-primary mr-2">
                    Submit
                </button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

  <script src="~/Admin/vendors/js/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page-->
  <script src="~/Admin/vendors/chart.js/Chart.min.js"></script>
  <!-- End plugin js for this page-->
  <!-- inject:js -->
  <script src="~/Admin/js/off-canvas.js"></script>
  <script src="~/Admin/js/hoverable-collapse.js"></script>
  <script src="~/Admin/js/template.js"></script>
  <!-- endinject -->
  <!-- plugin js for this page -->
  <!-- End plugin js for this page -->
  <!-- Custom js for this page-->
  <script src="~/Admin/js/dashboard.js"></script>
  <script src="~/js/ApiAddress.js"></script>

<script src="~/admin/js/file-upload.js"></script>

