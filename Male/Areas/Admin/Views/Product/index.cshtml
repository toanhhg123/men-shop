@model IEnumerable<Male.Models.Product>;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product</h4>
           <a asp-action="create" class="btn btn-primary btn-rounded btn-icon d-flex align-items-center justify-content-center">
                <i class="mdi mdi-account-plus"></i>
            </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.rating)
                            </th>
                             <th>
                                @Html.DisplayNameFor(model => model.img1)
                            </th>
                            <th>
                               actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                   
                                    <td class="w-25">
                                        @item.Name
                                    </td>
                                     <td class="w-25">
                                        @item.Price
                                    </td>
                                    <td >
                                        <p class="text-slipt">@item.description</p>
                                    </td>
                                    <td >
                                        <p class="text-slipt">@item.rating</p>
                                    </td>
                                    <td >
                                        <img src="~/uploads/@item.img1" alt="">
                                    </td>
                                     <td class="d-flex">
                                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-success btn-sm mx-2">Edit</a>
                                        <form asp-action="Delete" method="post" asp-controller="Product"  asp-route-id='@item.id'>
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>