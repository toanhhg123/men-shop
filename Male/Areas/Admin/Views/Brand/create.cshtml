@model Male.Models.Brand;

@{

}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create </h4>
            <form class="forms-sample" asp-action='create' method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for='Name'></label>
                    <input
                        type="text"
                        class="form-control"
                        id="exampleInputName1"
                        placeholder="Name"
                        asp-for='Name'
                    />
                    <span asp-validation-for='Name' class="bg-danger text-white my-1 d-block"></span>
                </div>
                 <div class="form-group">
                      <label asp-for="Desc"></label>
                      <textarea asp-for='Desc' class="form-control" id="exampleTextarea1" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">
                    Submit
                </button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
