@model IEnumerable<Male.Models.Brand>;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Brands</h4>
           <a asp-action="create" class="btn btn-primary btn-rounded btn-icon d-flex align-items-center justify-content-center">
                <i class="mdi mdi-account-plus"></i>
            </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Desc)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                   
                                    <td class="w-25">
                                        @item.Name
                                    </td>
                                    <td >
                                        <p class="text-slipt">@item.Desc</p>
                                    </td>
                                     <td >
                                        <form asp-action="Delete" asp-controller="Brand"  asp-route-id='@item.id'>
                                            <button type="submit" class="btn btn-danger btn-rounded btn-icon">
                                                <i class="mdi mdi-close-circle"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>