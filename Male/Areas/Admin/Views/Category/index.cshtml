@model IEnumerable<Male.Models.Category>;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
           <a asp-action="create" class="btn btn-primary btn-rounded btn-icon d-flex align-items-center justify-content-center">
                <i class="mdi mdi-account-plus"></i>
            </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Desc)
                            </th>
                             <th>
                                @Html.DisplayNameFor(model => model.metaTiltle)
                            </th>
                             <th>
                                @Html.DisplayNameFor(model => model.metaKeyword)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                   
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Desc
                                    </td>
                                    <td>
                                        @item.metaTiltle
                                    </td>
                                    <td>
                                        @item.metaKeyword
                                    </td>
                                    <td class="d-flex">
                                        <a class="btn btn-success btn-sm mx-1" asp-action="Edit" asp-route-id="@item.id" >edit</a>
                                        <form asp-action="Delete"  asp-route-id='@item.id'>
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>