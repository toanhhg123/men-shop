@model IEnumerable<Male.Models.Account>;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Account</h4>
           <a asp-action="create" class="btn btn-primary btn-rounded btn-icon d-flex align-items-center justify-content-center">
                <i class="mdi mdi-account-plus"></i>
            </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                ImageUser
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Role
                            </th>
                            <th>
                                Phone Number
                            </th>
                             <th>
                                actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/uploads/@item.img" alt="image">
                                    </td>
                                    <td>
                                        @item.email
                                    </td>

                                    <td>
                                        @item.Role?.RoleName
                                    </td>
                                    <td>
                                        @item.phoneNumber
                                    </td>
                                    <td class="d-flex">
                                        <a asp-action="edit" asp-route-id="@item.id" class="btn btn-sm btn-success mx-1">edit</a>
                                       <form asp-action="delete" method="post" asp-route-id="@item.id">
                                         <button type="submit" class="btn btn-sm btn-danger">delete</button>
                                       </form>
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>