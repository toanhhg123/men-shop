@model Male.Models.UserRegister;

@{
    var roles = ViewBag.roles as List<Role>;
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Account</h4>
            <form class="forms-sample" asp-action='create' method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for='@Model.userName'></label>
                    <input
                        type="text"
                        class="form-control"
                        id="exampleInputName1"
                        placeholder="Name"
                        asp-for='@Model.userName'
                    />
                    <span asp-validation-for='@Model.userName' class="bg-danger text-white my-1 d-block"></span>
                </div>
                <div class="form-group">
                    <label asp-for='@Model.email'>Email address</label>
                    <input
                        type="email"
                        class="form-control"
                        id="exampleInputEmail3"
                        placeholder="Email"
                        asp-for='@Model.email'
                        
                    />
                    <span asp-validation-for='@Model.email' class="bg-danger text-white my-1 d-block"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input
                        type="password"
                        class="form-control"
                        id="exampleInputPassword4"
                        placeholder="Password"
                        asp-for='@Model.password'
                    />
                    <span asp-validation-for='@Model.password' class="bg-danger text-white my-1 d-block"></span>

                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Roles</label>
                    <select name="role" class="form-control" id="exampleSelectGender">
                        @if(roles != null){
                            foreach (var item in roles)
                            {
                                <option value="@item.id">@item.RoleName</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <input
                        type="file"
                        name="img"
                        class="file-upload-default"
                    />
                    <div class="input-group col-xs-12">
                        <input
                            type="text"
                            class="form-control file-upload-info"
                            disabled=""
                            placeholder="Upload Image"
                        />
                        <span class="input-group-append">
                            <button
                                class="file-upload-browse btn btn-primary"
                                type="button"
                            >
                                Upload
                            </button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">address</label>
                    <select name="province" class="form-control mb-2 province" id="exampleSelectGender ">
                       <option value="">---chọn thành phố</option>
                    </select>
                    <select name="districts" class="form-control districts" id="exampleSelectGender">
                    </select>
                </div>
                 <div class="form-group">
                    <label asp-for='@Model.phoneNumber'></label>
                    <input
                        type="text"
                        class="form-control"
                        id="exampleInputCity1"
                        placeholder="phone number"
                        asp-for='@Model.phoneNumber'
                    />
                </div>
                <button type="submit" class="btn btn-primary mr-2">
                    Submit
                </button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
